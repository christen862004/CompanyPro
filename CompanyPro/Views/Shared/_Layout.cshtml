<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CompanyPro</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CompanyPro.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
       <!--Use Partial view-->
       <!--Html Helper-->
        @*@Html.Partial("_NavPartial") *@
        @*@await Html.PartialAsync("_NavPartial") *@
        @*@{
            Html.RenderPartial("_NavPartial");//execute write response
            await Html.RenderPartialAsync("_NavPartial");
        }*@
        <!--Tag Heper-->
        <partial name="_NavPartial" />
    </header>
    <div class="container">
        <main role="main" class="pb-3" style="border:5px solid red">
            @RenderBody()
        </main>
    </div>
    

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - CompanyPro - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
