@model Employee
@{
    ViewData["Title"] = "New";
    SelectList deptList = new SelectList(ViewBag.Depts,"Id","Name");
    
}

<h1>New</h1>

<form asp-action="SaveNew" asp-controller="Employee" method="post">
    <div>
        <label asp-for="Name"></label>
        <input class="form form-control" asp-for="Name"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Address"></label>
        <input class="form form-control" asp-for="Address" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Salary"></label>
        <input class="form form-control" asp-for="Salary"/>
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="ImageURl"></label>
        <input class="form form-control" asp-for="ImageURl"/>
        <span asp-validation-for="ImageURl" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="jobTitle"></label>
        <input class="form form-control" asp-for="jobTitle"/>
        <span asp-validation-for="jobTitle" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="DepartmentId"></label>
        @* <input class="form form-control" asp-for="DepartmentId" /> *@
        <select class="form form-control" 
                asp-for="DepartmentId"
                asp-items="deptList"
                > 
                <option value="0">--Select Department--</option>
               

        </select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
    </div>
    <input type="submit" value="Create" class="btn btn-secondary" />
</form>
<a asp-action="Index" asp-controller="Employee">Back To List</a>

